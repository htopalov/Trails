@model EventDetailsModel

<style>
    .main-event{
        padding: 3%;
        margin-top: 3%;
        margin-bottom: 3%;
        border-radius: 0.5rem;
        background: #fff;
    }
    .event-img{
        text-align: center;
    }
    .event-img img{
        width: 70%;
        height: 100%;
        border-radius: 0.5rem;
    }
    .event-img .file {
        position: relative;
        overflow: hidden;
        margin-top: -20%;
        width: 70%;
        border: none;
        border-radius: 0;
        font-size: 15px;
        background: #212529b8;
    }
    .event-img .file input {
        position: absolute;
        opacity: 0;
        right: 0;
        top: 0;
    }
    .event-head h5{
        color: #333;
    }
    .event-head h6{
        color: #0062cc;
    }
    .event-edit-btn{
        border: none;
        border-radius: 1.5rem;
        width: 70%;
        padding: 2%;
        font-weight: 600;
        color: #6c757d;
        cursor: pointer;
    }
    .event-date-start{
        font-size: 14px;
        color: #1abc9c;
        margin-top: 5%;
    }
    .event-date-end{
        font-size: 14px;
        color: #fa0b02;
        margin-top: 5%;
    }
    .event-date span{
        color: #495057;
        font-size: 15px;
        font-weight: 600;
    }
    .event-work{
        padding: 14%;
        margin-top: -15%;
        word-wrap: break-word;
    }
    .event-work p{
        font-size: 12px;
        color: #818182;
        font-weight: 600;
        margin-top: 10%;
    }
</style>

@{
    ViewData["Title"] = "Event Details ";
}

<section class="page-section bg-primary">
    <div class="container mx-auto mt-4">
        <partial name="_DetailsPartial"/>
    </div>
</section>

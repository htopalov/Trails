@model EventEditFormModel

@{
    ViewData["Title"] = "Edit Event ";
}

<section class="page-section mt-1">
    <div class="container">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mt-5">Edit Event</h2>
        <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
        <form method="post">
            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="number" asp-for="Length" class="form-control" placeholder="Length" />
                <label asp-for="Length">Length</label>
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="StartDate" id="datepickerStart" class="form-control" type="datetime-local" placeholder="Start date and time"/>
                <label asp-for="StartDate">Start date and time</label>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EndDate" id="datepickerEnd" class="form-control" type="datetime-local" placeholder="End date and time"/>
                <label asp-for="EndDate">End date and time</label>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <select asp-for="Type" class="form-control border-white">
                    <option value="" disabled selected>Event type</option>
                    <option value="1">Running</option>
                    <option value="2">Cycling</option>
                    <option value="3">Orienteering</option>
                    <option value="4">SpeedHiking</option>
                    <option value="5">Other</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <select asp-for="DifficultyLevel" class="form-control border-white">
                    <option value="" disabled selected>Difficulty level</option>
                    <option value="1">VeryEasy</option>
                    <option value="2">Easy</option>
                    <option value="3">Moderate</option>
                    <option value="4">Demanding</option>
                    <option value="5">Extreme</option>
                </select>
                <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
            </div>
            <button class="btn btn-primary btn-xl mt-3" id="submitButton" type="submit">Send</button>
        </form>
    </div>
</div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
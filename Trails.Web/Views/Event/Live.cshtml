@model List<LiveEventCardModel>

@{
    ViewData["Title"] = "Live events ";
}


<section class="page-section bg-primary">
    <div class="container mx-auto mt-4">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-5 mt-5">Live events</h2>
        <div class="row m-auto">
            @if (@Model.Count == 0)
            {
                <h1 class="page-section-heading text-center text-uppercase text-secondary mb-5 mt-5">Currently there is no live events</h1>
            }
            else
            {
                foreach (var ev in Model)
                {
                    <div class="col-md-4 m-auto">
                        <div class="card">
                            <div class="wrapper">
                                <img src="@ev.Image" class="card-img-top img-fluid" alt="...">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@ev.Name</h5>
                                <a asp-controller="Event"
                           asp-action="Broadcast"
                           asp-route-eventId="@ev.Id"
                           class="btn btn-sm bg-warning"
                           id="watchBtn">Watch</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

@section Scripts
{
<script>
    document.getElementById('watchBtn').addEventListener('click', () => {
    showSpinner();
    });
</script>
}

@model AllRoutesModel

@{
    ViewData["Title"] = "All Routes ";

    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalRoutes / Model.RoutesPerPage);

    var nextButtonClassDisabled = Model.CurrentPage == maxPage || !Model.Routes.Any() 
        ? "disabled" 
        : string.Empty;

    var previousButtonClassDisabled = Model.CurrentPage == 1 
        ? "disabled" 
        : string.Empty;
}

<section class="bg-primary text-white mb-0" style="margin-top: 70px;">
    <div class="container" style="overflow: auto">
        <h1 class="page-section-heading text-center text-uppercase text-secondary mb-5 mt-5">All Routes</h1>
        <table class="table table-hover text-secondary mt-5 mb-5">
            <thead>
            <tr class="text-center">
                <th>Name</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            @if (!Model.Routes.Any())
            {
                <tr class="text-center text-secondary">
                    <td>No routes added to the system</td>
                </tr>
            }
            @for (int i = 0; i < Model.Routes.Count; i++)
            {
                var routeModel = Model.Routes[i];

                <tr class="text-center">
                    <td style="word-wrap: break-word">@routeModel.Name</td>
                    <td>
                        <a asp-controller="Route" asp-action="Details" asp-route-routeId="@routeModel.Id" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="container mt-3 mb-5">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a asp-controller="Route" asp-action="All" asp-route-currentPage="@previousPage" class="btn btn-sm btn-outline-light text-secondary @previousButtonClassDisabled" style="margin-right: 10px; min-width: 80px; max-width: 80px;">Previous</a>
                </li>
                <li class="page-item">
                    <span class="text-secondary text-center">[@Model.CurrentPage / @maxPage]</span>
                </li>
                <li class="page-item">
                    <a asp-controller="Route" asp-action="All" asp-route-currentPage="@(Model.CurrentPage + 1)" class="btn btn-sm btn-outline-light text-secondary @nextButtonClassDisabled" style="margin-left: 10px; min-width: 80px; max-width: 80px;">Next</a>
                </li>
            </ul>
        </div>
    </div>
</section>
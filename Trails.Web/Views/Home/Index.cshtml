@model string[]

@{
    ViewData["Title"] = "Home ";
}

<div id="carouselExampleFade" class="carousel slide carousel-fade mt-3 shadow p-2 mb-1 bg-white rounded" data-bs-ride="carousel" data-bs-touch="false">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Length; i++)
        {
                <div class="carousel-item  @(i == 0 ? "active" : string.Empty)" @(i == 0 ? "data-bs-interval=\"2000\"" : string.Empty)>
                    <img src="/images/@Model[i]" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Welcome to Trails Live GPS tracking system</h5>
                        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login" role="button">Get Involved NOW</a>
                        </div>
                </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!DOCTYPE html>
<html lang="en">
  <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="Trails Live GPS Tracking System For Running, Hiking, Skiing, Skiing and many more..." />
        <meta name="author" content="" />
        <title>@ViewData["Title"] - Trails</title>
        <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <link href="~/css/site.css" rel="stylesheet" />

  </head>
  <body id="page-top">
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Trails</a>
            <button class="navbar-toggler text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    <main role="main">
        @RenderBody()
        <partial name="_CookieConsentPartial"/>
        <partial name="Loader"/>
        <partial name="_GlobalStatusNotification"/>
    </main>
  <footer class="footer text-center">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">Location</h4>
                        <p class="lead mb-0">
                            6100 Kazanlak,
                            <br />
                            Stara Zagora, Bulgaria
                        </p>
                    </div>
                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <h4 class="text-uppercase mb-4">FAQ</h4>
                        <a asp-area="" 
                           asp-controller="Home" 
                           asp-action="Faq" 
                           class="btn btn-outline-light btn-social mx-1"><i class="fas fa-question-circle"></i></a>
                    </div>
                    <div class="col-lg-4">
                        <h4 class="text-uppercase mb-4">Contact</h4>
                        <p class="lead mb-0">
                            Feel free to <a asp-controller="Home" asp-action="Contact" style="text-decoration: none">contact</a> us any time.
                        </p>
                    </div>
                </div>
            </div>
        </footer>
  <div class="copyright py-4 text-center text-white">
      <div class="container"><small>Copyright &copy; Trails GPS System @DateTime.UtcNow.Year</small></div>
  </div>
  <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/bundles/site.min.js"></script>
  @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>

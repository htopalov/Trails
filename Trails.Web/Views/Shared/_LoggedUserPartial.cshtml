@model List<FirstToStartEventCardModel>

@{
    ViewData["Title"] = "Home ";
}


<section class="page-section bg-primary">
    <div class="container mx-auto mt-4">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-5 mt-5">Coming up events</h2>
        <div class="row">
            @if (@Model.Count == 0)
            {
                <h1 class="page-section-heading text-center text-uppercase text-secondary mb-5 mt-5">No events added in system</h1>
            }
            else
            {
                foreach (var ev in @Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-5">
                            <img src="@ev.Image" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@ev.Name</h5>
                                <p class="card-text">@ev.Description</p>
                                <a class="btn btn-sm bg-warning" style="margin-bottom: 30px" asp-controller="Event" asp-action="Details" asp-route-eventId="@ev.Id">Details</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
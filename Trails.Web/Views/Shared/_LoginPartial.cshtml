@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (!SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
    else if(SignInManager.IsSignedIn(User))
    {
        if (!User.IsInRole("Administrator"))
        { 
            <li class="nav-item">
                <a  class="nav-link py-3 px-0 px-lg-3 rounded" asp-controller="Event" asp-action="Create">Create Event</a>
            </li>
            <li class="nav-item">
                <a  class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Manage/All">My Events</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a  class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Administration" asp-controller="Administration" asp-action="Index">Administration</a>
            </li>
        }
        <li class="nav-item">
            <a  class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Manage/All">All Events</a>
        </li>
        <li class="nav-item">
            <a  class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Manage/Index">My Profile</a>
        </li>
        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logoutBtn"  type="submit" class="nav-link mt-2 py-1 px-0 px-lg-2 rounded" style="background: transparent">Logout</button>
            </form>
        </li>
    }
</ul>


@model AllBeaconsModel

@{
    ViewData["Title"] = "Manage Beacons ";

    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalBeacons / Model.BeaconsPerPage);

    var nextButtonClassDisabled = Model.CurrentPage == maxPage || !Model.Beacons.Any() 
                                        ? "disabled" 
                                        : string.Empty;

    var previousButtonClassDisabled = Model.CurrentPage == 1 
                                            ? "disabled" 
                                            : string.Empty;

    @for (int i = 0; i < Model.Beacons.Count; i++)
    {
        @await Html.PartialAsync("_BeaconDescriptionPartial", 
            new BeaconDescriptionModel{Counter = i, Description = Model.Beacons[i].Description})
    }
}

<section class="bg-primary text-white mb-0">
    <div class="container" style="overflow:auto">
        <a class="btn btn-xl btn-outline-light text-secondary mb-3" style="margin-top: 120px;" asp-area="Administration" asp-controller="Beacon" asp-action="Create">
            Add Beacon
        </a>
        <table class="table table-hover text-secondary mt-3 mb-5">
            <thead>
            <tr class="text-center">
                <th>Imei</th>
                <th>SimNumber</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (!Model.Beacons.Any())
            {
                <tr class="text-center text-secondary">
                    <td>No beacons added to Trails.</td>
                </tr>
            }
            @for (int i = 0; i < Model.Beacons.Count; i++)
            {
                var beaconModel = Model.Beacons[i];

                <tr class="text-center">
                    <td>@beaconModel.Imei</td>
                    <td>@beaconModel.SimCardNumber</td>
                    <td><button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target=@($"#beaconDescription{i}")>More...</button></td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-warning">Edit</a>
                            <a class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="container mt-3 mb-5">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a asp-area="Administration" asp-controller="Beacon" asp-action="All" asp-route-currentPage="@previousPage" class="btn btn-sm btn-outline-light text-secondary @previousButtonClassDisabled" style="margin-right: 10px; min-width: 80px; max-width: 80px;">Previous</a>
                </li>
                <li class="page-item">
                    <span class="text-secondary text-center">[@Model.CurrentPage / @maxPage]</span>
                </li>
                <li class="page-item">
                    <a asp-area="Administration" asp-controller="Beacon" asp-action="All" asp-route-currentPage="@(Model.CurrentPage + 1)" class="btn btn-sm btn-outline-light text-secondary @nextButtonClassDisabled" style="margin-left: 10px; min-width: 80px; max-width: 80px;">Next</a>
                </li>
            </ul>
        </div>
    </div>
</section>
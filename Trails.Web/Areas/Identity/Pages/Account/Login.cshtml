@page
@model LoginModel

@{
    ViewData["Title"] = "Log in ";
}

<section>
    <div class="row d-flex justify-content-center col-12">
        <div class="col-4">
            <form id="account" method="post" class="py-3">
                <div class="d-flex justify-content-center">
                    <i class="icon-map-marker icon-4x text-success"></i>
                </div>
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Please log in</h1>
                </div>
                <div class="form-group mb-1 ">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email address" />
                </div>
                <div class="form-group mb-1 ">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                </div>
                <div asp-validation-summary="All" class="text-danger text-center"></div>
                <div class="form-group">
                    <div class="checkbox">
                        <label class="text-center" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group col-md-12 text-center">
                    <button type="submit" class="btn btn-lg btn-success btn-block">Log in</button>
                </div>
            </form>
        </div>
        <div class="row col-12" >
            <p class="col-12 col-md-12 text-center">
                <a class="text-muted" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p class="col-12 col-md-12 text-center text-muted">
                <a class="text-muted" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
